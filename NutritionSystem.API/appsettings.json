      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "NutritionSystem": "Information" // Controla el nivel de log de tu aplicación
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=172.16.0.163;Database=PacienteDB;User Id=sa;Password=pa$$w0rd;Encrypt=True;TrustServerCertificate=True;MultipleActiveResultSets=true"
